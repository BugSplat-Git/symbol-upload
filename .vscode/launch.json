    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/bin/index.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "args": [
                "-database",
                "fred",
                "-application",
                "my-ts-crasher",
                "-version",
                "1.0.0",
                "-directory",
                "./dist",
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}